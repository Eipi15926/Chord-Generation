{
    "name": "LSTM",
    
    "data":{
        "data_folder": "data/",
        "classify_folder": "data/classify",
        "parse_path": "data/",
        "train_scale": 0.8,
        "val_scale": 0.1,
        "test_scale": 0.1,
        "one-hot": false
    },

    "dataloader":{
        "batch_size": 64,
        "shuffle": false
    },
    
    "model":{
        "name": "LSTM",
        "save_dir": "save/",
        "save_name": "mymodel.pt",
        "args":{
            "input_size": 12,
            "output_size": 12,
            "embed_size": 8,
            "hidden_size": 128,
            "num_layers": 2,
            "dropout": 0.2,
            "bidirectional": true
        },
        "train":{
            "lr": 0.001,
            "max_epochs": 10,
            "early_stop": 10
        },
        "metric":{
            "lim_num": 3,
            "lim": 0.5
        }
    }
}